    <style>
        .search-box {
            position: relative;
            height: 50px;
            max-width: 50px;
            margin: auto;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.25);
            border-radius: 25px;
            transition: all 0.3s ease;
        }
        
        #check:checked~.search-box {
            max-width: 380px;
        }
        
        .search-box input {
            height: 100%;
            width: 100%;
            border-radius: 25px;
            background: #fff;
            outline: none;
            border: none;
            padding-left: 20px;
            font-size: 18px;
        }
        
        .search-box .icon {
            position: absolute;
            right: -2px;
            top: 0;
            width: 50px;
            background: #FFF;
            height: 100%;
            text-align: center;
            line-height: 50px;
            color: #363636;
            font-size: 20px;
            border-radius: 25px;
        }
        
        #check:checked~.search-box .icon {
            background: #333232;
            color: #FFF;
            width: 60px;
            border-radius: 0 25px 25px 0;
        }
        
        #check {
            display: none;
        }
    </style>

</head>

