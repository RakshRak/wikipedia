<%- include("../partials/header.ejs") %>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Main</div>
                        <a class="nav-link" href="/articles">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>
                        <a class="nav-link" href="/search">
                            <div class="sb-nav-link-icon"><i class="fas fa-search"></i></div>
                            Search
                        </a>

                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as: User</div>
                    <p>

                    </p>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>

                <div class="container-fluid">
                    <h3 class="mt-4 mx-2">Articles</h3>
                    <hr/>
                    <div class="card m-2" style="width: 18rem;">
                        <div class="card-body">
                            <h3 class="card-title" style="color: black;">Article</h3>
                            <p class="card-text">Title:
                                <%= requ.title %>
                            </p>
                            <p class="card-text">Phone:
                                <%= requ.context%>
                            </p>
                            <h6>Posted on:
                                <%= requ.date %>
                            </h6>
                            <a href="/<%=id%>/articles/<%=requ._id%>/edit" class="btn btn-secondary">EDIT</a>
                            <form id='delete' action='/<%=id%>/articles/<%=requ._id%>?_method=DELETE' method='POST'>
                                <button class='btn btn-danger'> DELETE </button>
                            </form>
                        </div>
                    </div>

            </main>
            <%- include("../partials/footer") %>